{% extends '@uids_base/layout/header.html.twig' %}

{% block uiowa_bar %}
    {{ attach_library('uids_base/site-slogan') }}
    {% include '@uids/03 - global/site-slogan/site-slogan.twig' with { "site_slogan": site_name } %}

    {% if header_top_menu != 'none' %}
        {{ header_top_menu }}
    {% endif %}
{% endblock %}

{% block tertiary_content %}
    <div class="site_name--wrapper {{ header_nav }}">
        <div class="page__container">

            {{ attach_library('uids_base/site-name') }}
            {% include '@uids/03 - global/site-name/site-name.twig' with {
                site_name: site_slogan
            } %}

            {% if uiowa_search_form %}
                {% include '@uids_base/global/search-toggle.html.twig' with {
                    search_form: uiowa_search_form
                } %}
            {% endif %}
            {% if page.primary_menu %}
                {% if header_nav == 'nav--toggle' %}

                    {# Off-Canvas menu #}
                    {{ attach_library('uids_base/off-canvas') }}
                    <div class="o-canvas__group">
                        <div class="o-canvas__wrapper">
                            {% include '@uids/03 - global/menus/off-canvas/off-canvas--bttn.twig' %}
                            {% embed '@uids_base/global/off-canvas--drawer.html.twig' %}
                                {% block drawer %}
                                    {{ page.primary_menu }}
                                {% endblock %}
                            {% endembed %}
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}